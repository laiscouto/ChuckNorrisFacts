<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.ui.homescreens.fragments.SearchFragment"
    android:background="@color/white">


    <TextView
        android:id="@+id/text"
        android:text="@string/text_enter_a_search"
        android:textColor="@color/blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/enter_fact"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/enter_fact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:autofillHints="Enter a fact"
        android:inputType="textAutoComplete"
        android:enabled="true"
        android:maxLength="20"
        android:backgroundTint="@color/blue"/>

    <ImageView
        android:id="@+id/search"
        android:layout_width="41dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_outline_search_24"
        app:layout_constraintBottom_toBottomOf="@id/enter_fact"
        app:layout_constraintEnd_toEndOf="@id/enter_fact"
        app:layout_constraintTop_toTopOf="@id/enter_fact"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:text="SEARCH"
        android:id="@+id/bt_fact"
        android:layout_width="120dp"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="64dp"
        android:background="@drawable/custon_bt_first_direct"
        app:layout_constraintStart_toStartOf="parent"
        />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/chuck"
        android:layout_width="82dp"
        android:layout_height="87dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/chuck"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>